
  <%= simple_form_for @pic do |f| %>
  <% if @pic.errors.any? %>
  <div id="errors">
    <h2><%= pluralize(@pic.errors.count, "error") %></h2>
    <ul>
      <% @pic.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.input :image %>
  </div>
  <div class="form-group">
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>

  <p>
    <%= f.button :submit, class: "btn btn-info" %>
  </p>
  <% end %>
